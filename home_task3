		cout << "начислим ему больше еды: " << rab1<< "\n";
	}

	else if (rab2 > rab1 || rab2 > rab3) {
		rab2 = rab2 + 200;
		cout << "лучше всех работал второй раб: " << "\n";

		cout << "начислим ему больше еды: " << rab2<< "\n";
	}

	else if (rab3 > rab2 || rab3 > rab1) {
		rab3 = rab3 + 200;
		
		cout << "начислим ему больше еды: " << rab3<< "\n";
	}
	
