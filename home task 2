#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Russian");

	float ab=0, bc=0, w=0,x=0,s1=0,s2=0;
	cout << "введите расстояние от точки A до точки B  : " << "\n";
	
	cin >> ab;
	cout << "введите расстояние от точки B до точки C  : " << "\n";

	cin >> bc;
	cout << "введите вес груза  : " << "\n";

	cin >> w;
	
	if (w <= 500 ) {
		x =x+ 1;
	}
	else if (w <= 1000 ) {
		x = x + 4;
	}
	else if (w <= 1500 ) {
		x = x + 7;
	}
	else if (w <= 2000) {
		x = x + 9;
	}
	else {
		cout << "максимальный вес = 2000кг " << "\n";
	}

	s1 = x * ab;

	s2 = x * bc;


	if (s1 > 300) {
		cout << "по этому маршруту полет невозможен"<<s1<<s2;

	}
	else if (s2 > 300) {
		cout << "по этому маршруту полет невозможен";
	}
	else {
		cout << "для полета с точки А до точки В вам нужно "<<  s1  <<"л. топлива"<<"\n";
		cout << "для полета с точки В до точки С вам нужно " << s2 << "л. топлива" << "\n";
	}
	return 0;
}
